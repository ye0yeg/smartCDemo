<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <ImageView
        android:scaleType="fitXY"
        android:padding="1dp"
        android:background="#000000"
        android:id="@+id/iv_news_tpi_listview_item_pic"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:src="@drawable/pic_item_list_default" />

    <TextView
        android:id="@+id/tv_tpi_news_listview_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/iv_news_tpi_listview_item_pic"
        android:text="ABCCSSSSSSSSSSSSSSSSSSSSSSSCCCCCC" />

    <TextView
        android:layout_alignLeft="@id/tv_tpi_news_listview_item_title"
        android:id="@+id/tv_tpi_news_listview_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tpi_news_listview_item_title"
        android:layout_toRightOf="@id/iv_news_tpi_listview_item_pic"
        android:text="2022-14-14 22:22" />
    <ImageView 
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/iv_news_tpi_listview_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_news_comment_num"
        
        />

</RelativeLayout>